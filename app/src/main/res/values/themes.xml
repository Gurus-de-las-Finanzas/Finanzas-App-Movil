<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Finanzas" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/Theme.Finanzas.TextView</item>
        <item name="radioButtonStyle">@style/Theme.Finanzas.RadioButton</item>
        <item name="android:editTextStyle">@style/Theme.Finanzas.EditText</item>
        <item name="editTextStyle">@style/Theme.Finanzas.EditText</item>
        <item name="buttonStyle">@style/Theme.Finanzas.Button</item>
        <item name="android:buttonStyle">@style/Theme.Finanzas.Button</item>
        <item name="materialButtonStyle">@style/Theme.Finanzas.Button</item>

    </style>

    <style name="Theme.Finanzas.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.Finanzas.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Finanzas.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="Theme.Finanzas.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:padding">8dp</item>

    </style>

</resources>